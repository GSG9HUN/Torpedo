<Window x:Class="Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="Battleship 1.0" Height="500" Width="500" ResizeMode="NoResize">
    <Canvas Background="Cornsilk">
		<TextBlock Width="300" Height="60" FontSize="35" Foreground="Darkred" Canvas.Left="100" Canvas.Top="10" TextAlignment="center" FontWeight="Bold">BATTLESHIP</TextBlock>
        <Button x:Name="Single" Width="200" Height="60" FontSize="25" Foreground="Darkred" Canvas.Left="150" Canvas.Top="80" FontStyle="Italic" Click="Single_Click">Single player</Button>
        <Button x:Name="Multi" Width="200" Height="60" FontSize="25" Foreground="Darkred" Canvas.Left="150" Canvas.Top="150" FontStyle="Italic">Multiplayer</Button>
        <Button x:Name="Result" Width="200" Height="60" FontSize="25" Foreground="DarkRed" Canvas.Left="150" Canvas.Top="220" FontStyle="Italic" Click="Result_Click">Results</Button>
        <Button x:Name="Exit" Width="200" Height="60" FontSize="25" Foreground="Darkred" Canvas.Left="150" Canvas.Top="350" FontStyle="Italic" Click="Exit_Click">Exit</Button>
    </Canvas>
</Window>
