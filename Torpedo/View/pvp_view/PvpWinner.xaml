<Window x:Class="Torpedo.View.pvp_view.PvpWinner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo.View.pvp_view"
        mc:Ignorable="d"
        Title="Winner Screen" Height="500" Width="500">
    <Canvas Background="Cornsilk">
        <TextBlock Width="300" Height="50" FontSize="35" Foreground="Darkred" Canvas.Left="100" Canvas.Top="60" TextAlignment="center" FontWeight="Bold">Congratulation</TextBlock>
        <TextBlock x:Name="winnerNameTB" Text="" Width="300" Height="50" Foreground="DarkRed" Canvas.Left="100" Canvas.Top="120" TextAlignment="Center" FontWeight="Bold" FontSize="30"/>
        <TextBlock Width="300" Height="50" FontSize="30" Foreground="Darkred" Canvas.Left="100" Canvas.Top="180" TextAlignment="center" FontWeight="Bold">You Won! :)</TextBlock>
        <Button Width="100" Height="50" FontSize="25" Foreground="Darkred" Canvas.Left="200" Canvas.Top="300" FontStyle="Italic"  Click="MenuButtonClick">Menu</Button>
    </Canvas>
</Window>
