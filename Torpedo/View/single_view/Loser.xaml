<Window x:Class="Torpedo.View.single_view.Loser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo.View.single_view"
        mc:Ignorable="d"
        Title="You Lost" Height="500" Width="500" ResizeMode="NoResize">
    <Canvas Background="Cornsilk">
        <TextBlock Width="300" Height="60" FontSize="35" Foreground="Darkred" Canvas.Left="100" Canvas.Top="80" TextAlignment="center" FontWeight="Bold">You Lost :(</TextBlock>
        <TextBlock Width="300" Height="40" FontSize="25" Foreground="Darkred" Canvas.Left="100" Canvas.Top="200" TextAlignment="center" FontWeight="Bold">Try again?</TextBlock>
        <Button Width="100" Height="50" FontSize="25" Foreground="Darkred" Canvas.Left="100" Canvas.Top="300" FontStyle="Italic" Click="Yes_Button_Click">Yes</Button>
        <Button Width="100" Height="50" FontSize="25" Foreground="Darkred" Canvas.Left="300" Canvas.Top="300" FontStyle="Italic" Click="No_Button_Click">No</Button>
    </Canvas>
</Window>

