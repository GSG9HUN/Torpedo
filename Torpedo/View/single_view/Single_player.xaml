<Window x:Class="Torpedo.Single_player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="Single_Player" Height="500" Width="500" ResizeMode="NoResize" >
    <Canvas>
        <Label Width="150"  Canvas.Left="175" Canvas.Top="200" >
            Username
        </Label>
        <TextBox x:Name="username" Width="150"  Canvas.Left="175" Canvas.Top="224"></TextBox>
        <Button Canvas.Top="301" Width="100" Canvas.Left="200" Click="Start_Click">Start</Button>
        <Button Canvas.Top="368" Width="68" Canvas.Left="216" Click="Back_Click">Back</Button>


    </Canvas>
</Window>
